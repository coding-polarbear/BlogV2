extends layout

block content
	main.mdl-layout__content
		.page-content
			- if(postList)
				- for(let post of postList)
					.demo-card-wide.mdl-card.mdl-shadow--2dp
						- console.log('title : ' + post.title);
						.mdl-card__title(style="background: url('" + post.headUrl + "') center / cover;")
							h2.mdl-card__title-text #{post.title}
						.mdl-card__supporting-text.text
							| Posted by purplebeen
							|  on #{post.date} , 
							a(href='/categories/' + post.category) #{post.category}
						.mdl-card__actions.mdl-card--border
							a.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(href='/posts/view/' + post._id)
								| 자세히 보기
		hr
		-if(pageNum != 0)
			a(href='/posts/pages/' + (pageNum - 1))
				button.button.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--raised.mdl-button--accent(style="margin:10px;") ← Newer Posts
		-if(!isLast)
			a(href='/posts/pages/' + (pageNum + 1))
				button.button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored(style="margin:10px; float: right;") Older Posts →